<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Permitir acceso directo a archivos reales (html, css, js, im√°genes, etc)
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # Reescribir todas las rutas que no sean archivos/directorios a index.html
  RewriteRule ^(.*)$ index.html [L]
</IfModule>
